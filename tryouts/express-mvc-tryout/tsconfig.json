{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "baseUrl": "",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "outDir": "lib",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": ["src/**/*", "test/**/*"],
  "plugins": [
    {
      "name": "typescript-tsc-alias",
      "baseUrl": "./",
      "paths": {
        "@src/*": ["./src/*"]
      }
    }
  ],
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "fileExtensions": {
    "inputGlob": "js,jsx,mjs",
    "outputCheck": ["js", "json", "jsx", "mjs"]
  }
}
